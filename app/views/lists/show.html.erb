<div>
  <button class="btn-ghost">
 <i class="fa-solid fa-arrow-left"></i> <%= link_to 'back to Lists', lists_path %>
  </button>
</div>

<div class="banner">
  <h1> <%= @list.name %> </h1>
</div>

<div>
  <button class="btn-ghost">
    <i class="fa-solid fa-plus"></i> <%= link_to "New Bookmark", new_list_bookmark_path(@list) %>
  </button>
</div>

<div class="card-container">
  <% @bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><em>"<%= bookmark.movie.overview %>"</em></p>
        <p class="card-text"><i class="fa-regular fa-comment"></i>: "<%= bookmark.comment %>"</p>
        <i class="fa-solid fa-trash"></i> <%= link_to "Delete",  list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
