<%= link_to '<- back to Lists', lists_path %>
<h1> <%= @list.name %> </h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.comment %> | <%= bookmark.movie.title %>
      <%= link_to "Delete",  list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Create New Bookmark", new_list_bookmark_path(@list) %>
