
<div class="banner">
  <h1>My To-Watch Lists</h1>
</div>

<div>
  <button class="btn-ghost">
    <i class="fa-solid fa-plus"></i> <%= link_to 'New List', new_list_path %>
  </button>
</div>

<div class="card-container">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <img src="https://thereader.mitpress.mit.edu/wp-content/uploads/2020/01/lede-1-700x420.jpg" class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list%></h5>
      </div>
    </div>
  <% end %>
</div>
